<%=simple_form_for(@incapacidad, :html => {:class => 'form­horizontal', remote: true } ) do  |f| %>

  <% if @incapacidad.errors.any? %> 
  <div id="error_explanation"> 
    <h2><%= pluralize(@incapacidad.errors.count, "error") %> prohibited this incapacidad from  
      being saved:</h2>   
