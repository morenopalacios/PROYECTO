      <% @incapacidad.errors.full_messages.each do |message| %> 
      <li><%= message %></li> 
      <% end %> 
    </ul> 
  </div> 

<% end %> 

<div class="field">
    funcionarios <br>
    <%= f.collection_select :funcionario_id, Funcionario.all, :id, :nombres, class: "form-control", prompt:
    "Seleccione Funcionario" %>
  </div>
 

   <div class="form­-group"> 
    <label for="name" class="col-­sm-­3 control­-label">Fecha inicio</label>  
