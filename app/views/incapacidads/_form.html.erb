       <%= f.input :numeroinpacacidad, class: 'form­-control', :label => false %> 
    </div> 
   </div>

   <div class="form­-group"> 
    <label for="name" class="col-­sm-­3 control­-label">Origen de la incapacidad</label>  
    <div class="col­-md-­4"> 
       <%= f.input :origendelaincapacidad, class: 'form­-control', :label => false %> 
    </div> 
   </div>
 
<div class="form­-group"> 
   <div class="col­-sm­-offset­-2 col-­sm­-10"> 
   <%= f.submit "Guardar", class: "btn btn­-sm btn­-success" %> 
