       <%= f.input_field :fechainicio, class: 'form­-control'  %> 
    </div> 
   </div>


   <div class="form­-group"> 
    <label for="name" class="col-­sm-­3 control­-label">Fecha terminacion</label>  
    <div class="col­-md-­4"> 
       <%= f.input_field :fechaterminacion, class: 'form­-control' %> 
    </div> 
   </div>

   <div class="form­-group"> 
    <label for="name" class="col-­sm-­3 control­-label">Total dias</label>  
    <div class="col­-md-­4"> 
       <%= f.input :totaldias, class: 'form­-control', :label => false %> 
