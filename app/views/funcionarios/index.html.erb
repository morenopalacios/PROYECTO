<h1>Listado funcionarios</h1>
	<%= form_tag funcionarios_path, :method => 'get' do %>
	<% content_tag :label do %>
	Nombre:
	<%= text_field_tag :search, params[:search] %>
	<%= submit_tag "Buscar", :name => nil %>
	<% end %>
	<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Nombres</th>
      <th>Apellidos</th>
      <th>Tipodoc</th>
      <th>Identificacion</th>
      <th>Edad</th>
      <th>Genero</th>
      <th>Telefono</th>
      <th>Mail</th>
      <th>Centro</th>
      <th>cargo</th> 
      <th>Area</th>
      <th>Codigo</th> 
      <th>Antiguedad</th>
      <th>Eps</th>
      <th>Afp</th>
      <th>Arl</th>
      
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
     <%= render @funcionarios %>
  </tbody>
</table>

<br>
 
<%= button_to 'Nuevo Funcionario', new_funcionario_path, :method=>"get", class: "btn btn-primary btn-xs" %> 

<%= will_paginate @funcionarios, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente &raquo;' %>
<br>
Funcionarios: <%= @funcionarios.count %>
 

